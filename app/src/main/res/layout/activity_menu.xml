<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button_newFlower"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="@string/buttonNewFlower"
        android:layout_marginLeft="30dp" />

    <Button
        android:id="@+id/button_options"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:text="@string/buttonOptions"
        android:layout_below="@+id/button_newFlower"
        android:layout_alignLeft="@+id/button_newFlower"
        android:layout_alignStart="@+id/button_newFlower" />

    <Button
        android:id="@+id/button_exit"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/button_options"
        android:layout_below="@id/button_newFlower"
        android:text="@string/buttonExit"

    />


</RelativeLayout>
