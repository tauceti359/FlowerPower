<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"

>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/flowerpower"
        />

    <Button
        android:id="@+id/button_newFlower"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:text="@string/buttonNewFlower"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:background="#069420"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="22sp"
        />

    <Button
        android:id="@+id/button_continue"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:text="@string/buttonContinue"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-100dp"
        android:layout_marginLeft="70dp"
        android:background="#FF0D00"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="22sp"
        />

    <Button
        android:id="@+id/button_options"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:text="@string/buttonOptions"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="70dp"
        android:background="#FA7000"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="22sp"
        />

    <Button
        android:id="@+id/button_exit"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:text="@string/buttonExit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-100dp"
        android:layout_marginLeft="70dp"
        android:background="#0A10C7"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="22sp"
        />

    />

</LinearLayout>
