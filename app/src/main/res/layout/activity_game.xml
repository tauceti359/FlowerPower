<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"

    tools:context="abukottmegalanyok.nik.uniobuda.hu.flowerpower.GameActivity">

    <ImageView
        android:id="@+id/gameBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/locsol_btn"
        android:paddingBottom="0dp"
        />


    <ImageView
        android:id="@+id/gameimageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/tr_0"
        android:baselineAlignBottom="true"
        android:adjustViewBounds="false"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/locsol_btn"
        android:layout_marginBottom="-55dp"
        android:paddingBottom="0dp"
        />

    <ImageButton
        android:id="@+id/locsol_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wateringcan"
        android:padding="0dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/gameimageView"
        android:layout_alignEnd="@+id/gameimageView"
        android:src="@android:drawable/ic_menu_preferences" />

</RelativeLayout>
